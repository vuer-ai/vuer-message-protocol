# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# 2 space indentation
indent_style = space
indent_size = 2

# Line width
max_line_length = 120

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Python files
[*.py]
indent_size = 2
max_line_length = 120

# YAML files
[*.{yml,yaml}]
indent_size = 2
